{
    "name": "@listrrr/server",
    "description": "GraphQl server for the listrrr app",
    "private": false,
    "version": "1.0.0",
    "main": "src/bin/www",
    "engines": {
        "node": "^12.13.0 || ^10.15.0",
        "npm": "^6.10.0",
        "yarn": "^1.9.0"
    },
    "scripts": {
        "start": "NODE_ENV=production NODE_DEBUG=www node src/bin/www.js",
        "dev": "NODE_ENV=development NODE_DEBUG=www nodemon -T -P tsconfig.json -r dotenv/config src/bin/www.ts",
        "build": "NODE_ENV=production tsc --build tsconfig.json",
        "lint": "eslint --ext .js,.ts --fix --fix-type suggestion .",
        "start:build": "yarn build && yarn prod",
        "format": "prettier --write \"./**/*.ts\""
    },
    "license": "MIT",
    "dependencies": {
        "@listrrr/core": "^1.0.0",
        "@typegoose/typegoose": "^6.4.0",
        "apollo-server-errors": "^2.4.0",
        "bcryptjs": "^2.4.3",
        "dataloader": "^2.0.0",
        "fastify": "^2.12.1",
        "fastify-compress": "^2.0.1",
        "fastify-cors": "^3.0.2",
        "fastify-gql": "^3.0.6",
        "fastify-helmet": "^3.0.2",
        "graphql": "^14.6.0",
        "graphql-relay": "^0.6.0",
        "jsonwebtoken": "^8.5.1",
        "mongoose": "^5.9.3",
        "reflect-metadata": "^0.1.13",
        "type-graphql": "^0.18.0-beta.11"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/compression": "^1.7.0",
        "@types/express": "^4.17.3",
        "@types/graphql": "^14.5.0",
        "@types/graphql-relay": "^0.4.11",
        "@types/helmet": "^0.0.45",
        "@types/jsonwebtoken": "^8.3.8",
        "@types/mongoose": "^5.7.3",
        "@types/node": "^13.9.0",
        "@typescript-eslint/eslint-plugin": "^2.22.0",
        "@typescript-eslint/parser": "^2.22.0",
        "dotenv": "^8.1.0",
        "eslint": "^6.8.0",
        "eslint-config-airbnb-base": "^14.0.0",
        "eslint-config-prettier": "^6.10.0",
        "eslint-plugin-import": "^2.20.1",
        "eslint-plugin-node": "^11.0.0",
        "eslint-plugin-prettier": "^3.1.2",
        "nodemon": "^2.0.2",
        "prettier": "^1.19.1",
        "ts-node": "^8.6.2",
        "typescript": "^3.8.3"
    }
}
