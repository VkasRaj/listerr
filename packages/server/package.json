{
    "name": "@listrrr/server",
    "description": "GraphQl server for the listrrr app",
    "private": false,
    "version": "1.0.0",
    "main": "src/bin/www.ts",
    "scripts": {
        "start": "NODE_ENV=production NODE_DEBUG=www node src/bin/www.js",
        "dev": "NODE_ENV=development NODE_DEBUG=www nodemon -T -P tsconfig.json --ignore generated -r dotenv/config src/bin/www.ts",
        "build": "NODE_ENV=production rimraf build && tsc --build tsconfig.json",
        "lint": "eslint --ext .js,.ts --fix --fix-type suggestion .",
        "start:build": "yarn build && yarn prod"
    },
    "license": "MIT",
    "dependencies": {
        "@listrrr/core": "^1.0.0",
        "@typegoose/typegoose": "^6.1.5",
        "apollo-server": "^2.9.12",
        "apollo-server-express": "^2.9.12",
        "bcryptjs": "^2.4.3",
        "compression": "^1.7.4",
        "dataloader": "^2.0.0",
        "express": "^4.17.1",
        "graphql": "^14.5.8",
        "helmet": "^3.21.2",
        "jsonwebtoken": "^8.5.1",
        "mongoose": "^5.7.12",
        "reflect-metadata": "^0.1.13",
        "type-graphql": "^0.17.5"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/compression": "^1.0.1",
        "@types/express": "^4.17.2",
        "@types/graphql": "^14.5.0",
        "@types/helmet": "^0.0.45",
        "@types/jsonwebtoken": "^8.3.4",
        "@types/mongoose": "^5.5.32",
        "@types/node": "^12.12.11",
        "@typescript-eslint/eslint-plugin": "^2.8.0",
        "@typescript-eslint/parser": "^2.8.0",
        "dotenv": "^8.1.0",
        "eslint": "^6.5.1",
        "eslint-config-airbnb-base": "^14.0.0",
        "eslint-config-prettier": "^6.7.0",
        "eslint-plugin-import": "^2.18.2",
        "eslint-plugin-node": "^10.0.0",
        "eslint-plugin-prettier": "^3.1.0",
        "nodemon": "^2.0.0",
        "prettier": "^1.19.1",
        "rimraf": "^3.0.0",
        "ts-node": "^8.5.2",
        "typescript": "^3.7.2"
    }
}
