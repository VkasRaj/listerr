{
    "name": "@listrrr/server",
    "description": "GraphQl server for the listrrr app",
    "private": false,
    "version": "1.0.0",
    "main": "src/bin/www",
    "engines": {
        "node": "^12.13.0 || ^10.15.0",
        "npm": "^6.10.0",
        "yarn": "^1.9.0"
    },
    "scripts": {
        "start": "NODE_ENV=production NODE_DEBUG=www node src/bin/www.js",
        "dev": "NODE_ENV=development NODE_DEBUG=www nodemon -T -P tsconfig.json -r dotenv/config src/bin/www.ts",
        "build": "NODE_ENV=production tsc --build tsconfig.json",
        "lint": "eslint --ext .js,.ts --fix --fix-type suggestion .",
        "start:build": "yarn build && yarn prod",
        "format": "prettier --write \"./**/*.ts\""
    },
    "license": "MIT",
    "dependencies": {
        "@typegoose/typegoose": "^7.4.1",
        "apollo-server-errors": "^2.4.2",
        "bcrypt": "^5.0.0",
        "class-validator": "^0.12.2",
        "dataloader": "^2.0.0",
        "fastify": "^3.5.1",
        "fastify-compress": "^3.3.1",
        "fastify-cors": "^4.1.0",
        "fastify-gql": "^5.8.2",
        "fastify-helmet": "^5.0.3",
        "graphql": "^15.3.0",
        "graphql-relay": "^0.6.0",
        "jsonwebtoken": "^8.5.1",
        "mongoose": "^5.10.7",
        "reflect-metadata": "^0.1.13",
        "type-graphql": "1.0.0",
        "typedi": "^0.8.0"
    },
    "devDependencies": {
        "@types/bcrypt": "^3.0.0",
        "@types/graphql": "^14.5.0",
        "@types/graphql-relay": "^0.6.0",
        "@types/jsonwebtoken": "^8.5.0",
        "@types/mongoose": "^5.7.36",
        "@types/node": "^14.11.2",
        "@typescript-eslint/eslint-plugin": "^4.3.0",
        "@typescript-eslint/parser": "^4.3.0",
        "dotenv": "^8.1.0",
        "eslint": "^7.10.0",
        "eslint-config-airbnb-base": "^14.2.0",
        "eslint-config-prettier": "^6.12.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^3.1.4",
        "nodemon": "^2.0.4",
        "prettier": "^2.1.2",
        "ts-node": "^9.0.0",
        "typescript": "^4.0.3"
    }
}
